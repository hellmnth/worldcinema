<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:layout_marginStart="27dp"
    android:layout_marginEnd="20dp"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_screen">>
            <ImageView
                android:id="@+id/pers"
                android:layout_width="128dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@drawable/jesper"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
            android:id="@+id/name_pers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Джеспер"
                android:layout_marginStart="16dp"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/pers"/>

            <TextView
                android:id="@+id/opis_pers"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:text="главный герой Клауса. Он ленивый и избалованный (но с большим сердцем) сын богатого генерального почтмейстера. "
                android:textSize="12sp"
                android:textColor="@color/white"
                app:layout_constraintStart_toEndOf="@id/pers"
                app:layout_constraintTop_toBottomOf="@id/name_pers" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>