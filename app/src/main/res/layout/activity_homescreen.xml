<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homescreen"
    android:background="@color/color_screen">

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toTopOf="@+id/navig"
    />

            <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/navig"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/dark_blue"
            app:menu="@menu/navimenu"
            app:itemTextColor="@drawable/navi"
            app:itemRippleColor="@color/color_screen"
            app:itemIconTint="@drawable/navi"
            app:itemActiveIndicatorStyle="@color/dark_blue"/>

</androidx.constraintlayout.widget.ConstraintLayout>
